<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/route_search_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#292929">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/route_search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/car_owner_search_view_background" />
        <TextView
            android:id="@+id/route_search_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="25dp"
            android:text="输入车牌号"
            android:textColor="#999999" />
    </RelativeLayout>
    <com.amap.api.maps.TextureMapView
        android:layout_marginTop="15dp"
        android:id="@+id/route_map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/route_search_rl" />
</RelativeLayout>