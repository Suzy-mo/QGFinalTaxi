<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="20dp"
    android:background="@drawable/exception_check_dialog_background">

    <TextView
        android:id="@+id/exception_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="异常信息类型"
        android:textColor="#FF03DAC5"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/dismiss_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/exception_tv"
        android:background="@mipmap/dismiss" />
    <RadioGroup
        android:id="@+id/select_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/exception_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/all_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部异常"
            android:textColor="#DEFFFFFF" />

        <RadioButton
            android:id="@+id/k_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计价器K值异常"
            android:textColor="#DEFFFFFF" />

        <RadioButton
            android:id="@+id/address_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上下车地点异常"
            android:textColor="#DEFFFFFF" />

        <RadioButton
            android:id="@+id/mile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="里程异常"
            android:textColor="#DEFFFFFF" />

        <RadioButton
            android:id="@+id/time_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="载客时间异常"
            android:textColor="#DEFFFFFF" />
    </RadioGroup>

    <TextView
        android:id="@+id/sure_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="确认"
        android:textColor="#99FFFFFF"
        android:layout_marginBottom="30dp"
        android:textSize="18sp" />
</RelativeLayout>